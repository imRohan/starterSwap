	<div class="lead well">
		<div class="media">
			<div class="media-left">
				<a href="#">
					<img class="media-object" src="<%= @question.gravatar %>">
				</a>
			</div>
			<div class="media-body">
				<h4 class="media-heading"><%= @question.email %> asked</h4>
				<%= @question.body %>
			</div>
		</div>
	</div>
<div class="container">
	<button type="button" class="btn btn-success" data-toggle="modal" data-target="#new-answer-modal">Submit Answer</button>
	<%= render 'home/new_answer_form' %>
	<% @answers.each do |answer| %>
	<div class="media">
		<div class="media-left">
			<a href="#">
				<img class="media-object" src="<%= answer.gravatar %>">
			</a>
		</div>
		<div class="media-body">
			<h4 class="media-heading"><%= answer.email %> answered</h4>
			<%= answer.body %>
		</div>
	</div>
	<% end %>

	<% if @answers.empty? %>
	<div class="alert alert-info" role="alert">Nothing to show</div>
	<% end %>
	
</div>