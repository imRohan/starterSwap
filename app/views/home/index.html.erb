<h1>Welcome</h1>
<div class="container">
<% @questions.each do |q| %>
	<div class="media">
		<div class="media-left">
			<a href="#">
				<img class="media-object" src="<%= q.gravatar %>">
			</a>
		</div>
		<div class="media-body">
			<h4 class="media-heading"><%= q.location %></h4>
			<div>Added <%= time_ago_in_words q.created_at %> ago by <%= q.name %> </div>
			<%= q.body %>
			<div>
				<a href="<%= question_path(q)%>">View Question</a>
			</div>
		</div>
	</div>
	<% end %>

	<% if @questions.empty? %>
	<div class="alert alert-info" role="alert">Nothing to show</div>
	<% end %>
</div>